@model BanHang.Model.Category

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2 class="bg-success">XÓA DANH MỤC</h2>
<hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <hr />
        <div class="col-md-offset-2 col-md-10">
            <h4 class="label-danger">Bạn thật sự muốn xóa mục này à?</h4>
        </div>
    </div>
    <div class="form-group">
        <div class="control-label col-md-2">Tên danh mục</div>
        <div class="col-md-10">
            @*Hiển thị giá trị của CategoryNamed*@
            @Html.DisplayFor(model => model.CategoryName)
        </div>
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Xóa" class="btn btn-primary" />
            @Html.ActionLink("Quay lại danh sách", "Index", null, new { @class = "btn btn-primary" })
        </div>
    </div>
}
